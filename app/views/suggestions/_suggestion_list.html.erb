<div class='w-1/3 py-2 px-3'>
  <div class="flex justify-between items-center">
    <div class="flex items-center space-x-2">
      <%= image_tag 'avatar.svg', class: "rounded-full w-6" %>
      <div>
        <p class='font-bold mb-0 text-xs'><%= current_user.username %></p>
        <p class='font-light mb-0 text-xs'><%= current_user.full_name %></p>
      </div>
    </div>

    <%= link_to 'Switch', posts_path,class: 'text-xs' %>
  </div>
  <div class='flex items-center justify-between mt-3'>
    <p class='mb-0 text-gray-400 text-xs'>Suggestions for you</p>
    <%= link_to 'See all', posts_path, class: 'text-black text-xs' %>
  </div>

  <%= render 'suggestions/suggestions' %>
</div>
