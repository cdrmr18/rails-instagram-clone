<div class="flex justify-center items-center mt-20">
  <div class="flex flex-col">
    <div class="bg-white border rounded-md w-full max-w-sm lg:w-96 border-gray-400 flex flex-1 flex-col justify-center px-4 py-12 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
      <%# card %>
      <div class="w-full">
        <div class='text-center'>
          <%= image_tag 'logo.png', class: "h-10 w-auto m-auto" %>
          <p class="font-semibold text-sm mt-4">Sign up to see photos and videos from your friends.</p>
        </div>

        <div class="mt-4">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }, class: "space-y-6") do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" },
                            class: "mt-2 border rounded-md border-gray-400",
                            placeholder: 'Phone number or email',
                            label: false%>
                <%= f.input :username,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "username" },
                            class: "mt-2 border rounded-md border-gray-400",
                            placeholder: 'Username',
                            label: false%>
                <%= f.input :full_name,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "full_name" },
                            class: "mt-2 border rounded-md border-gray-400",
                            placeholder: 'Full Name',
                            label: false%>

                <%= f.input :password,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        class: "mt-2 border rounded-md border-gray-400",
                        placeholder: 'Password',
                        label: false %>

                <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        class: "mt-2 border rounded-md border-gray-400",
                        placeholder: 'Confirm password',
                        label: false %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: "flex w-full justify-center rounded-md btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3">
            <div class="relative">
              <div class="absolute inset-0 flex items-center" aria-hidden="true">
                <div class="w-full border-t border-gray-200"></div>
              </div>
              <div class="relative flex justify-center text-sm font-medium leading-6">
                <span class="bg-white px-6 text-gray-900 font-semibold">OR</span>
              </div>
            </div>

            <div class=" flex flex-col items-center justify-center space-y-3">
              <div class="flex items-center justify-center space-x-3">
                <%= image_tag 'facebook.png', class: "h-5 w-5" %>
                <span class="text-sm font-semibold leading-6">Log in with Facebook</span>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    <div  class="bg-white border rounded-md w-full border-gray-400 text-center px-3 py-2 mt-3">
      Have an account? <%= link_to 'Login', new_user_session_path %>
    </div>
  </div>
</div>
